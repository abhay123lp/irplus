<!DOCTYPE hibernate-mapping SYSTEM
			"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!--
	Mapping for a researcher publication.
	
	@author Sharmila Ranganathan
-->
<hibernate-mapping package="edu.ur.ir.researcher">

	<class name="ResearcherPublication" schema="ir_researcher" table="researcher_publication"
		lazy="true">

		<!-- Common id property. -->
		<id name="id" type="long" column="researcher_publication_id"
			unsaved-value="0" access="field">
			<generator class="sequence">
				<param name="sequence">ir_researcher.researcher_publication_seq</param>
			</generator>
		</id>

		<!-- A versioned entity. -->
		<version name="version" column="version"
			access="org.hibernate.property.DirectPropertyAccessor" />
			
        <!--  The publication this researcher holds -->
        <many-to-one name="publication" 
              class="edu.ur.ir.item.GenericItem" 
              unique="true" 
              column="item_id" 
              cascade="save-update"
              not-null="true" 
              access="field"/>
        
        <!--  The researcher folder -->
        <many-to-one name="parentFolder" class="ResearcherFolder" 
              unique="true" 
              column="researcher_folder_id" 
              cascade="save-update"
              access="field"/>

        <!--  The researcher who owns this file -->
        <many-to-one name="researcher" 
              class="Researcher" 
              unique="true" 
              column="researcher_id" 
              not-null="true" 
              access="field"/>

        
	</class>

	  <!-- named query for getting the count of item being used in researcher publication-->
	<query name="getResearcherPublicationCount">
		select count(*) 
		from ResearcherPublication as ResearcherPublication where
		ResearcherPublication.publication.id = ?
	</query>
	
    
</hibernate-mapping>