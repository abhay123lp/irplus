<!DOCTYPE hibernate-mapping SYSTEM
			"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!--
	Mapping for invite information to a group workspace group
	
	@author Nathan Sarr
-->
<hibernate-mapping package="edu.ur.ir.groupspace">
	<class name="GroupWorkspaceGroupInvite" schema="ir_group_workspace"
	    table="group_workspace_group_invite"
		lazy="true">

		<!-- Common id property. -->
		<id name="id" type="long" column="group_workspace_group_invite_id"
			unsaved-value="0" access="field">
			<generator class="sequence">
				<param name="sequence">ir_group_workspace.group_workspace_group_invite_seq</param>
			</generator>
		</id>

		<!-- A versioned entity. -->
		<version name="version" column="version"
			access="org.hibernate.property.DirectPropertyAccessor" />

		<!--  invite token -->
		<many-to-one class="edu.ur.ir.invite.InviteToken"
			name="inviteToken" 
			column="invite_token_id" 
			cascade="all"
			unique="true" 
			access="field"/>
			
		<!--  user being invited -->
		<many-to-one class="edu.ur.ir.user.IrUser" 
			name="invitedUser" 
			column="invited_user_id" 
			insert="true"
			update="false" 
			unique="true" 
			access="field"/>
			
	  <!-- group workspace group the user was added to -->
	  <many-to-one class="GroupWorkspaceGroup" 
			name="group" 
			column="group_workspace_group_id" 
			insert="true"
			update="false" 
			unique="true" 
			access="field"/>

    </class>
		
    <!-- named query for getting invite information for given token-->
    <query name="findGroupWorkspaceGroupInviteForToken">from GroupWorkspaceGroupInvite inviteInfo where inviteInfo.inviteToken.token = :token </query> 
 
    <!-- named query for getting invite information for given email -->
    <query name="findGroupWorkspaceGroupInviteForEmail">from GroupWorkspaceGroupInvite inviteInfo where lower(inviteInfo.inviteToken.email) = :email </query> 
    
    <!-- named query for getting invite information made by a given user -->
    <query name="getGroupWorkspaceGroupInviteMadeByUser">from GroupWorkspaceGroupInvite inviteInfo where inviteInfo.inviteToken.invitingUser.id = :userId </query> 
    
    	<!--  Get a count of roles in the system -->
	<query name="groupWorkspaceGroupInviteCount">
	    select count(*) from GroupWorkspaceGroupInvite
	</query>
	
		<!-- sort by last name asc -->
	<query name="getGroupWorkspaceGroupInviteOrderByInvitorAsc">
		select inviteInfo from GroupWorkspaceGroupInvite as inviteInfo
		order by inviteInfo.group.groupWorkspace.name asc, inviteInfo.inviteToken.invitingUser.lowerCaseLastName asc, inviteInfo.inviteToken.invitingUser.lowerCaseFirstName asc, inviteInfo.inviteToken.invitingUser.lowerCaseMiddleName asc
	</query>	

	<!-- sort by last name desc -->
	<query name="getGroupWorkspaceGroupInviteOrderByInvitorDesc">
		select inviteInfo from GroupWorkspaceGroupInvite as inviteInfo
		order by inviteInfo.group.groupWorkspace.name desc, inviteInfo.inviteToken.invitingUser.lowerCaseLastName desc, inviteInfo.inviteToken.invitingUser.lowerCaseFirstName desc, inviteInfo.inviteToken.invitingUser.lowerCaseMiddleName desc
	</query>	
	
</hibernate-mapping>