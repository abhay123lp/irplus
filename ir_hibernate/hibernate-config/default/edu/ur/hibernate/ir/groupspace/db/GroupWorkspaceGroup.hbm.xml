<!DOCTYPE hibernate-mapping SYSTEM
			"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!--
	Mapping for group work space group.
	
	@author Nathan Sarr
-->
<hibernate-mapping package="edu.ur.ir.groupspace">
	<class name="GroupWorkspaceGroup" 
	    schema="ir_group_workspace"
	    table="group_workspace_group"
		lazy="true">
		
		<!-- Common id property. -->
		<id name="id" type="long" column="group_workspace_group_id"
			unsaved-value="0" access="field" >
			<generator class="sequence" >
				<param name="sequence">ir_group_workspace.group_workspace_group_seq</param>
			</generator>
		</id>

		<!-- A versioned entity. -->
		<version name="version" column="version"
			access="org.hibernate.property.DirectPropertyAccessor" />

		<property name="name" column="name" type="string"
			not-null="true" access="field" />
			
		<property name="lowerCaseName" column="lower_case_name" type="string"
			not-null="true" access="field" />

		<property name="description" column="description" type="string"
			not-null="false" access="field" />
		
	    <!-- Group this group belongs to -->
		<many-to-one class="GroupWorkspace" 
			name="groupWorkspace" 
			column="group_workspace_id" 
			insert="true"
			update="true" 
			unique="true"/>
		
		<!-- users that belong to this group -->
		<set name="users" 
		    optimistic-lock="false"
		    schema="ir_group_workspace"
		    table="group_workspace_group_users"  
		    cascade="save-update" 
		    access="field" 
		    lazy="true"
		    fetch="subselect">
			<key column="group_workspace_group_id" not-null="true"/>
			<many-to-many column="user_id" unique="true" class="edu.ur.ir.user.IrUser"/>
		</set>

	 </class>
		
	<!--  Get a count of groups in the system for a given group workspace-->
	<query name="groupWorkspaceGroupCount">
	    select count(*) from GroupWorkspaceGroup theGroup
	    where theGroup.groupWorkspace.id = :groupWorkspaceId  
	</query>
	
	
	<!--  Get a list of groups for a particular user -->
	<query name="getGroupWorkspaceGroupsForWorkspace">
	    from GroupWorkspaceGroup theGroup
	    where theGroup.groupWorkspace.id = :groupWorkspaceId
	</query>
	
	
	<!--  Get a list of groups for a particular user -->
	<query name="getGroupWorkspaceGroupsForUser">
	    select theGroup from GroupWorkspaceGroup theGroup
	    join theGroup.users as user
	    where user.id = :userId
	    and theGroup.groupWorkspace.id = :groupWorkspaceId
	</query>
	

    <!-- named query for getting a user group order by name asc -->
	<query name="getGroupWorkspaceGroupsOrderByNameAsc">
		from  GroupWorkspaceGroup theGroup
		where theGroup.groupWorkspace.id = :groupWorkspaceId
		order by theGroup.lowerCaseName asc
	</query>
	
	
   <!-- named query for getting a user group order by name desc -->
	<query name="getGroupWorkspaceGroupsOrderByNameDesc">
		from  GroupWorkspaceGroup theGroup
		where theGroup.groupWorkspace.id = :groupWorkspaceId
		order by theGroup.lowerCaseName desc
	</query>
	
	<!--  Get a particular user from a user group -->
	<query name="getUserForGroupWorkspaceGroup">
	    select user from GroupWorkspaceGroup theGroup
	    join theGroup.users as user
	    where user.id = :userId
	    and theGroup.id = :groupId
	</query>
	
</hibernate-mapping>