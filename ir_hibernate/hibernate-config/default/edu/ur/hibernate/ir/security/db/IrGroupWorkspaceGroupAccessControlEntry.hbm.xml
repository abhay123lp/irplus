<!DOCTYPE hibernate-mapping SYSTEM
			"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!--
	Mapping for an User Group access control entry.  These are the permissions given to a 
	specified user group.
	
	@author Nathan Sarr
-->
<hibernate-mapping package="edu.ur.ir.security">
	<class name="IrGroupWorkspaceGroupAccessControlEntry" schema="ir_security" table="group_workspace_group_control_entry"
		lazy="true">

		<!-- Common id property. -->
		<id name="id" type="long" column="group_workspace_group_control_entry_id"
			unsaved-value="0" access="field" >
			<generator class="sequence">
				<param name="sequence">ir_security.group_workspace_group_control_entry_seq</param>
			</generator>
		</id>

		<!-- A versioned entity. -->
		<version name="version" column="version"
			access="org.hibernate.property.DirectPropertyAccessor" />

		<!--  Parent ACL -->
		<many-to-one class="IrAcl"
			name="irAcl" column="acl_id" insert="true"
			update="true" access="field" not-null="true"/>
		
		<!--  User Group this entry is for -->
		<many-to-one class="edu.ur.ir.groupspace.GroupWorkspaceGroup"
			name="workspaceGroup" column="group_workspace_group_id" insert="true"
			update="true" access="field" not-null="true"/>
			
		
		<!--  permissions for the user control entry -->
		<set lazy="true"
		     fetch="subselect" 
		     name="irClassTypePermissions" 
		     optimistic-lock="false" 
		     schema="ir_security" 
		     access="field" 
		     table="group_workspace_group_control_entry_permission" 
		     cascade="save-update">
		    <key column="group_workspace_group_control_entry_id"/>
		    <many-to-many column="class_type_permission_id" class="IrClassTypePermission"/>
		</set>
			
	 </class>
		
	<!--  Get a count of user access control entries -->
	<query name="groupWorkspaceGroupAccessEntryCount">
	    select count(*) from IrGroupWorkspaceGroupAccessControlEntry
	</query>
	
	<!--  determine if the user group has the specified permission for
	      a specific class type ( for example the group has permissions to 
	      manage a collection in the system ) -->
	<query name="groupWorkspaceGroupPermissionCountForClassType" >
	    select count(*) 
	    from IrGroupWorkspaceGroupAccessControlEntry as entry
	       join entry.workspaceGroup workspaceGroup
	       join entry.irClassTypePermissions permission
	       join permission.irClassType classType
        where classType.id = :classTypeId
        and permission.id = :permissionId
        and workspaceGroup.id = :workspaceGroupId
	</query>
	
	<!--  determine if the user group has the specified permission for
	      a specific class  -->
	<query name="groupWorkspaceGroupPermissionCountForClassTypeObject" >
	    select count(*) 
	    from IrGroupWorkspaceGroupAccessControlEntry as entry
	        join entry.workspaceGroup workspaceGroup
	        join entry.irAcl acl
	        join entry.irClassTypePermissions permission
	        join permission.irClassType classType
        where classType.id = :classTypeId
        and permission.id = :permissionId
        and workspaceGroup.id = :workspaceGroupId
        and acl.objectId =  :objectId
	</query>
	
</hibernate-mapping>