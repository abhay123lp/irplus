<!DOCTYPE hibernate-mapping SYSTEM
			"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!--
	Mapping for an IR File indexing record failure.
	
	@author Nathan Sarr
-->
<hibernate-mapping package="edu.ur.ir.file">

	<class name="IrFileIndexingFailureRecord" schema="ir_file" table="ir_file_indexing_failure_record"
		lazy="true">

		<!-- Common id property. -->
		<id name="id" type="long" column="ir_file_indexing_failure_record_id"
			unsaved-value="0" access="field">
			<generator class="sequence">
				<param name="sequence">ir_file.ir_file_indexing_failure_record_seq</param>
			</generator>
		</id>

		<property name="irFileId" column="ir_file_id" 
		     type="long" not-null="true"
			 access="field" />
			 
		<property name="dateCreated" column="date_created" 
		     type="timestamp" 
			 access="field" />
		
		<property name="failureReason" column="failure_reason" 
		     type="string" 
			 access="field" />
	</class>		
		
	<!--  Get a count of items in the system -->
	<query name="irFileIndexingFailureRecordCount">
	    select count(*) from IrFileIndexingFailureRecord
	</query>

    
</hibernate-mapping>