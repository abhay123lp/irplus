<!DOCTYPE hibernate-mapping SYSTEM
			"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!--
	Mapping for a dublin core element
	
	@author Nathan Sarr
-->
<hibernate-mapping package="edu.ur.metadata.dc">
	<class name="DublinCoreEncodingScheme" schema="metadata" table="dublin_core_encoding_scheme"
		lazy="true">

        <cache usage="nonstrict-read-write" />

		<!-- Common id property. -->
		<id name="id" type="long" column="dublin_core_encoding_scheme_id"
			unsaved-value="0" access="field">
			<generator class="sequence">
				<param name="sequence">metadata.dublin_core_encoding_scheme_seq</param>
			</generator>
		</id>

		<!-- A versioned entity. -->
		<version name="version" column="version"
			access="org.hibernate.property.DirectPropertyAccessor" />

		<property name="name" column="name" type="string"
			not-null="true" access="field" />

		<property name="description" column="description" type="string"
			not-null="false" />
		
	 </class>
		
	<!--  Get a count of metadata types in the system -->
	<query name="dublinCoreEncodingSchemeCount">
	    select count(*) from DublinCoreEncodingScheme
	</query>
	
    <!-- named query for getting a syntax encoding scheme by name-->
	<query name="getDublinCoreEncodingSchemeByName">
		from DublinCoreEncodingScheme as DublinCoreEncodingScheme where
		DublinCoreEncodingScheme.name = ?
	</query>
	
	
</hibernate-mapping>