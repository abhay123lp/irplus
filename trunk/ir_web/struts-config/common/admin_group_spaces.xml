       <!--  ************************************ -->
       <!-- Group spaces actions                  -->
       <!--  ************************************ -->
       <action name="viewGroupSpaces" 
            class="edu.ur.ir.web.action.groupspace.ManageGroupSpaces">
            <interceptor-ref name="editStack"/>
            <result name="success">/pages/admin/groupspace/groupspaces.jsp</result>
        </action>
       
        <!--  This handles update, save and delete -->
        <action name="*GroupSpace" 
            method="{1}"
            class="edu.ur.ir.web.action.groupspace.ManageGroupSpaces">
            <interceptor-ref name="crudStack" />
            <result name="input">/pages/admin/groupspace/groupspace.jsp</result>
            <result name="added">/pages/admin/groupspace/groupspace_form.jsp</result>
            <result name="deleted">/pages/admin/groupspace/groupspace_table.jsp</result>
            <result name="get">/pages/admin/groupspace/edit_groupspace.jsp</result>
        </action>