<!DOCTYPE hibernate-mapping SYSTEM
			"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!--
	Mapping for birth date
	
	@author Sharmila Ranganathan
-->
<hibernate-mapping package="edu.ur.ir.person">
	<class name="BirthDate" schema="person" table="birth_date"
		lazy="true">

		<!-- Common id property. -->
		<id name="id" type="long" column="birth_date_id"
			unsaved-value="0" access="field">
			<generator class="sequence">
				<param name="sequence">person.birth_date_seq</param>
			</generator>
		</id>

		<!-- A versioned entity. -->
		<version name="version" column="version"
			access="org.hibernate.property.DirectPropertyAccessor" />
			
		<property name="day" column="day" type="int"
			access="field" />
			
		<property name="month" column="month" type="int"
			access="field" />

		<property name="year" column="year" type="int"
			access="field" />

		<property name="hours" column="hours" type="int"
			access="field" />

		<property name="minutes" column="minutes" type="int"
			access="field" />

		<property name="seconds" column="seconds" type="int"
			access="field" />

		<property name="fractionOfSecond" column="fraction_seconds" type="int"
			access="field" />
			
		<!--  Person -->
		<many-to-one class="PersonNameAuthority"
		    optimistic-lock="false"
			name="personNameAuthority" 
			column="person_name_authority_id" 
			insert="true"
			update="true" 
			access="field"/>   

	</class>
		
	<!--  Get a count of birth dates in the system -->
	<query name="birthDateCount">
	    select count(*) from BirthDate
	</query>
	

</hibernate-mapping>