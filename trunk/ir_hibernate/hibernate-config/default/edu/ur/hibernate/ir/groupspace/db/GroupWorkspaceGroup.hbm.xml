<!DOCTYPE hibernate-mapping SYSTEM
			"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!--
	Mapping for group space.
	
	@author Nathan Sarr
-->
<hibernate-mapping package="edu.ur.ir.groupspace">
	<class name="GroupWorkspaceGroup" schema="ir_group_workspace"
	    table="group_workspace_group"
		lazy="true">
		
		<!-- Common id property. -->
		<id name="id" type="long" column="group_workspace_id"
			unsaved-value="0" access="field" >
			<generator class="sequence" >
				<param name="sequence">ir_group_workspace.group_workspace_group_seq</param>
			</generator>
		</id>

		<!-- A versioned entity. -->
		<version name="version" column="version"
			access="org.hibernate.property.DirectPropertyAccessor" />

		<property name="name" column="name" type="string"
			not-null="true" access="field" />

		<property name="description" column="description" type="string"
			not-null="false" access="field" />
		
		<!-- users that belong to this group -->
		<set name="members" 
		    optimistic-lock="false"
		    schema="ir_user"
		    table="user_group_users"  
		    cascade="save-update" 
		    access="field" 
		    lazy="true"
		    fetch="subselect">
			<key column="group_id" not-null="true"/>
			<many-to-many column="user_id" unique="true" class="IrUser"/>
		</set>

	 </class>
		
	<!--  Get a count of groups in the system -->
	<query name="groupSpaceGroupCount">
	    select count(*) from GroupSpaceGroup group
	    where group.groupSpace.id = :groupSpaceId  
	</query>
	
	
	<!--  Get a list of groups for a particular user -->
	<query name="getGroupSpaceGroupsForUser">
	    select GroupSpaceGroup from IrUserGroup group
	    join group.members as member
	    where member.id = :userId
	    and group.groupSpace.id = :groupSpaceId
	</query>
	

    <!-- named query for getting a user group order by name asc -->
	<query name="getGroupsSpaceGroupsOrderByNameAsc">
		from  GroupSpaceGroup group
		where group.groupSpace.id = :groupSpaceId
		order by group.lowerCaseName asc
	</query>
	
   <!-- named query for getting a user group order by name desc -->
	<query name="getGroupsSpaceGroupsOrderByNameDesc">
		from  GroupSpaceGroup group
		where group.groupSpace.id = :groupSpaceId
		order by group.lowerCaseName desc
	</query>
	
</hibernate-mapping>